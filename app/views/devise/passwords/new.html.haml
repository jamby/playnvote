.container{style: "padding-top: 20px;"}
  .col-md-6.col-md-offset-3
    .well
      %h2{style: "width: 340px;"} Forgot your password?
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, role: "form") do |f|
        / = devise_error_messages!
        .form-group
          = f.label :email
          %br
          = f.email_field :email, :autofocus => true, class: "form-control"
        %div= f.submit "Send me reset password instructions", class: "btn btn-primary"
      %br
      = render "devise/shared/links"

  - if @user.errors.any?
    .notifications.top-center
      .alert.alert-error.in.fade
        %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
        = devise_error_messages!