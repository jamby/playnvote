.col-md-4.col-md-offset-4
  %h2{style: "width: 340px;"} Forgot your password?
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, role: "form") do |f|
    = devise_error_messages!
    .form-group
      = f.label :email
      %br
      = f.email_field :email, :autofocus => true, class: "form-control"
    %div= f.submit "Send me reset password instructions", class: "btn btn-primary"
  %br
  = render "devise/shared/links"
