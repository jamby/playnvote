.container
  .row
    .col-md-5
      %h2.text-center
        = link_to @game1.title, @game1
      %hr
      %p
        Release Date: #{@game1.release_date.strftime("%B %-d, %Y")}
      %p
        = @game1.platform.join(" | ")
    
    .col-md-2
      = render 'shared/voting', relatedGame: @relatedGame
  
  
    .col-md-5
      %h2.text-center
        = link_to @game2.title, @game2
      %hr
      %p
        Release Date: #{@game2.release_date.strftime("%B %-d, %Y")}
      %p
        = @game2.platform.join(" | ")
        
  
  %br
  %br
  
  .row
    .col-md-12
      You are viewing a single comment's thread.
      %br
      = link_to "view the rest of the comments", related_game_path(@relatedGame)
      %br
      %br
      #comments
        = render partial: 'comments/comment', locals: { comment: @comment, ttl_cmts: get_ttl_cmts(@comment.id) }